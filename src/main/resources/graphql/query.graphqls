type Query {
	jokers: [Joker!]!
	jokersByRarity(rarity: Rarity!): [Joker!]!
	jokersByType(type: Type!): [Joker!]!
	jokersByActivation(activation: Activation!): [Joker!]!
}

type Joker {
	id: ID!
	name: String!
	rarity: String!
	description: String!
	unlockMethod: String!
	price: Int!
	type: String!
	activation: String!
}